script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")

mixin range-slider
  div(class="rangeslider")
    input(class="min" name="range_1" type="range" min="1" max="100" value="1")
    input(class="max" name="range_2" type="range" min="1" max="100" value="100")
    span(class="range_min light left") 10 000 ₽ 
    span(class="range-dash light") -
    span(class="range_max light right") 100 000 ₽
    
    output(for = "range_2" class="range-output-max")
    output(for = "range_2" class="range-output-min")
  script(src = "./range-slider.js")